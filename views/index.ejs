<!DOCTYPE html>
<html lang="uz">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MovieMedia - Kino Sayti</title>
    
    <!-- ğŸ“Œ Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="/styles.css">
</head>
<body class="bg-dark text-white">

    <!-- ğŸ“Œ Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-black shadow">
        <div class="container">
            <a class="navbar-brand text-danger fs-3 fw-bold" href="/">ğŸ¬ MovieMedia</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="btn btn-outline-success me-2" href="/signup">Signup</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-primary" href="/login">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <!-- ğŸ“Œ Qidiruv va Qoâ€˜shish -->
    <div class="container my-4 text-center">
        <form action="/search" method="GET" class="input-group w-50 mx-auto shadow-lg">
            <input type="text" class="form-control bg-secondary text-light border-0 p-2 rounded-start" name="q" placeholder="ğŸ” Kino nomini kiriting..." required>
            <button class="btn btn-outline-danger px-4 rounded-end" type="submit">
                <i class="fas fa-search"></i> Qidirish
            </button>
        </form>
        <a class="btn btn-danger mt-3" href="/addMovie">â• Yangi Kino Qoâ€˜shish</a>
    </div>
    
    <!-- ğŸ“Œ Kino Roâ€˜yxati -->
    <div class="container mt-4">
        <h2 class="text-center mb-4">ğŸ¬ Kino Roâ€˜yxati</h2>
        <div class="row">
            <% if (movies.length === 0) { %>
                <p class="text-center text-light">ğŸš€ Hozircha hech qanday kino mavjud emas.</p>
            <% } else { %>
                <% movies.forEach(movie => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card movie-card bg-secondary text-white shadow-lg">
                            <div class="card-body">
                                <h5 class="card-title text-danger fw-bold"><i class="fas fa-film"></i> <%= movie.title %></h5>
                                <p class="card-text"><strong>ğŸ­ Rejissor:</strong> <%= movie.director %></p>
                                <p class="card-text"><strong>ğŸ“… Yil:</strong> <%= movie.year %></p>
                                
                                <div class="d-flex justify-content-between">
                                    <a href="/watch/<%= movie._id %>" class="btn btn-outline-light">â–¶ï¸ Koâ€˜rish</a>
                                    <button class="btn btn-outline-warning edit-movie" data-id="<%= movie._id %>">ğŸ–‹ï¸ Tahrirlash</button>
                                    <button class="btn btn-outline-danger delete-movie" data-id="<%= movie._id %>">ğŸ—‘ Oâ€˜chirish</button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>

    <!-- ğŸ“Œ Footer -->
    <footer class="text-center mt-5 py-3 bg-black">
        <p class="m-0 text-light">Â© 2025 MovieMedia | Barcha huquqlar himoyalangan.</p>
    </footer>

    <!-- ğŸ“Œ Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ğŸ“Œ Kino oâ€˜chirish uchun AJAX skripti -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // ğŸ¬ Kino oâ€˜chirish
            document.querySelectorAll(".delete-movie").forEach(button => {
                button.addEventListener("click", function() {
                    const movieId = this.getAttribute("data-id");
                    const confirmation = confirm("ğŸ—‘ Ushbu kinoni oâ€˜chirishni tasdiqlaysizmi?");
                    
                    if (confirmation) {
                        fetch(`/deleteMovie/${movieId}`, { method: "DELETE" })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                alert("âœ… Kino muvaffaqiyatli oâ€˜chirildi!");
                                location.reload();
                            } else {
                                alert("âŒ Xatolik yuz berdi! Kino oâ€˜chirishni qayta urinib koâ€˜ring.");
                            }
                        })
                        .catch(error => {
                            console.error("Xatolik:", error);
                            alert("âŒ Kino oâ€˜chirishda xatolik yuz berdi!");
                        });
                    }
                });
            });
    
            // âœï¸ Kino tahrirlash
            document.querySelectorAll(".edit-movie").forEach(button => {
                button.addEventListener("click", function() {
                    const movieId = this.getAttribute("data-id");
    
                    // Ma'lumotni olib kelish
                    fetch(`/getMovie/${movieId}`)
                    .then(response => response.json())
                    .then(movie => {
                        document.getElementById("editMovieId").value = movieId;
                        document.getElementById("editTitle").value = movie.title;
                        document.getElementById("editDirector").value = movie.director;
                        document.getElementById("editYear").value = movie.year;
                        
                        // Modalni koâ€˜rsatish
                        new bootstrap.Modal(document.getElementById("editMovieModal")).show();
                    })
                    .catch(error => {
                        console.error("Xatolik:", error);
                        alert("âŒ Kino ma'lumotlarini yuklashda xatolik yuz berdi!");
                    });
                });
            });
    
            // ğŸ”„ Kino ma'lumotlarini yangilash
            document.getElementById("editMovieForm").addEventListener("submit", function(event) {
                event.preventDefault();
                
                const movieId = document.getElementById("editMovieId").value;
                const updatedMovie = {
                    title: document.getElementById("editTitle").value,
                    director: document.getElementById("editDirector").value,
                    year: document.getElementById("editYear").value
                };
    
                fetch(`/updateMovie/${movieId}`, {
                    method: "PUT",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(updatedMovie)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert("âœ… Kino muvaffaqiyatli yangilandi!");
                        location.reload();
                    } else {
                        alert("âŒ Xatolik yuz berdi! Yangilashni qayta urinib koâ€˜ring.");
                    }
                })
                .catch(error => {
                    console.error("Xatolik:", error);
                    alert("âŒ Kino yangilashda xatolik yuz berdi!");
                });
            });
        });
    </script>
</body>
</html>